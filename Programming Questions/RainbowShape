;            https://stackoverflow.com/questions/69902585/racket-rainbow-shape-recursion

(require pict)

;Call the recursive function that draws alternating shapes f1 and f2 in rainbow color
(define (rainbowShape f1 f2)
  (define counter 6)
  (define template (blank 0))
  (define rainbow (list "red" "orange" "yellow" "green" "blue" "purple"))
  (rainbowRecur f1 f2 counter template rainbow)
  )
  
; Recursive function that alternate between two shapes while also coloring them according to the color
; of the rainbow
; Input: f1 and f2 are pict;
;        count is the number of recursive calls to make
;        lineup is the current line up of shapes to be drawn
;        colorList is the list of color
(define (rainbowRecur f1 f2 count lineup colorList)
  (cond
    [(equal? count 0) lineup]
    ;If the counter is currently odd, append the second shape thru recursive call
    [(odd? count) (rainbowRecur f1 f2 (- count 1) (hc-append 10 lineup (colorize f2 (first colorList)))(rest colorList))]
    [else (rainbowRecur f1 f2 (- count 1) (hc-append 10  lineup (colorize f1 (first colorList)))(rest colorList))]))

;(rainbowShape(filled-ellipse 50 50)(filled-rectangle 50 50))
(rainbowShape(filled-rectangle 50 50)(filled-ellipse 50 50))


